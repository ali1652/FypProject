<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMINhome">

    <View
        android:id="@+id/headerBar"
        android:layout_width="428dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/headertitle" />

    <Button
        android:id="@+id/button2"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="toFoodDatabase"
        android:text="View Food Database" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button3"
        android:background="@color/black"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/button2"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="toAddFood"
        android:text="Add Food" />

    <Button
        android:id="@+id/button4"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/line1"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="toVolunteerDatabase"
        android:text="View Volunteers Database" />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button5"
        android:background="@color/black"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/button4"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="toAddVolunteer"
        android:text="Add Volunteer" />

    <Button
        android:id="@+id/button6"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/line2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="toDonationDatabase"
        android:text="View Donation Database" />

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button7"
        android:background="@color/black"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/button6"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="toAddDonation"
        android:text="Add Donation" />


    <Button
        android:id="@+id/button8"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/line3"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:onClick="toPickUpDatabase"
        android:text="View Pick Up Requests" />



    <Button
        android:id="@+id/button9"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_below="@id/button8"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="toAddPickUp"
        android:text="Add Pick Up Request" />





    <TextView
        android:id="@+id/brand"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="KU FOOD BANK"
        android:textSize="32dp"
        android:textColor="@color/White"
        android:gravity="center_horizontal|top"
        />



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:textSize="48dp"
        android:textColor="@color/HeaderColor"
        android:text="Admin Home"

        android:gravity="center_horizontal|top"
        />

    <View
        android:id="@+id/logo"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/logo"
        />

    <TextView
        android:id="@+id/sg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_above="@id/signOut"
        android:text="Log Out"
        android:textSize="20dp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />




    <Button
        android:id="@+id/signOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="signOutAdmin"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/lgout"/>





</RelativeLayout>