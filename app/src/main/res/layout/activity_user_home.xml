<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome">

    <View
        android:id="@+id/headerBar"
        android:layout_width="428dp"
        android:layout_height="80dp"
        android:layout_below="@id/donate"
        android:layout_alignParentTop="true"
        android:background="@drawable/headertitle" />


    <TextView
        android:id="@+id/brand"
        android:layout_width="274dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="KU FOOD BANK"
        android:textSize="32dp"
        android:textColor="@color/White"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="247dp"
        android:layout_height="68dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:textSize="48dp"
        android:textColor="@color/HeaderColor"
        android:text="Home"

        android:gravity="center_horizontal|top"
        />

    <View
        android:id="@+id/logo"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:background="@drawable/logo"
        />


    <Button
        android:id="@+id/Volunteer"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:layout_below="@id/volunteer"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/Blackk"
        android:onClick="toVolunteer"
        android:background="@drawable/person"
         />

    <Button
        android:id="@+id/Donate"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/donate"
        android:layout_marginRight="95dp"
        android:layout_alignParentRight="true"
        android:onClick="toDonate"
        android:layout_marginTop="20dp"
        android:layout_below="@id/donate"/>

    <Button
        android:id="@+id/RequestFood"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp"
        android:onClick="toRequestFood"
        android:background="@drawable/rf"
        android:layout_below="@id/vf"/>

    <Button
        android:id="@+id/ViewFood"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="95dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:onClick="toViewFood"
        android:background="@drawable/vf"
        android:layout_below="@id/vf"/>
    <Button
        android:id="@+id/Appointments"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:onClick="toAppointments"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        android:backgroundTint="@android:color/black"

        android:background="@drawable/appointments"
        android:layout_below="@id/app"/>

    <TextView
        android:id="@+id/sg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_above="@id/signOut"
        android:text="Log Out"
        android:textSize="20dp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />

    <Button
        android:id="@+id/signOut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="signOut"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/lgout"
        android:text="signOut" />

    <TextView
    android:id="@+id/volunteer"
    android:layout_width="138dp"
    android:layout_height="30dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="63dp"
    android:layout_alignParentTop="true"
    android:layout_marginTop="180dp"
    android:text="Volunteer"
        android:textSize="20sp"
        android:textColor="@color/Blackk"

    android:gravity="center_horizontal|top"
    />



    <TextView
        android:id="@+id/donate"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="215dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:text="Donate"
        android:textSize="20sp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/volunteer"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangle_2"
        />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/donate"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:background="@drawable/rectangle_2" />
    <TextView
        android:id="@+id/rq"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="63dp"

        android:layout_marginTop="10dp"
        android:layout_below="@id/rectangle_2"
        android:text="Request Food"
        android:textSize="20sp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:id="@+id/vf"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="215dp"
        android:layout_below="@id/rectangle_4"
        android:layout_marginTop="10dp"
        android:text="View Food"
        android:textSize="20sp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />

    <View
        android:id="@+id/rectangle_5"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/rq"
        android:layout_marginLeft="70dp"
        android:background="@drawable/rectangle_2"
        />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/vf"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:background="@drawable/rectangle_2" />

    <TextView
        android:id="@+id/app"
        android:layout_width="138dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:text="Appointments"
        android:textSize="20sp"
        android:textColor="@color/Blackk"
        android:gravity="center_horizontal|top"
        />
    <View
        android:id="@+id/rectangle_7"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_below="@id/app"
        android:layout_alignParentRight="true"
        android:layout_marginRight="145dp"
        android:background="@drawable/rectangle_2" />




</RelativeLayout>